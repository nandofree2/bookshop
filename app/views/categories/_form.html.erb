<%= form_with(model: category, local: true) do |f| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-success" %>
<% end %>
